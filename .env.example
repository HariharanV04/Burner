# Environment Configuration Template for Burner Project
# =====================================================
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env files with real secrets!

# Mistral AI Configuration
# ========================
MISTRAL_API_KEY=your_mistral_api_key_here
MISTRAL_API_URL=https://api.mistral.ai/v1
MISTRAL_MODEL=mistral-large-latest

# Database Configuration
# ======================
DB_KIND=sqlite
DB_URL=db/emp.sqlite

# Server Configuration
# ====================
PORT=4004
NODE_ENV=development

# CAP Configuration
# =================
CDS_LOG_LEVEL=info
CDS_REQUIRES_AUTH=mocked

# API Configuration
# =================
API_BASE_URL=http://localhost:4004
ODATA_SERVICE_PATH=/odata/v4/burner

# Security Configuration
# ======================
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here

# External Services (if needed)
# =============================
# EXTERNAL_API_KEY=your_external_api_key_here
# EXTERNAL_API_URL=https://api.example.com

# Logging Configuration
# =====================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Email Configuration (if needed)
# ===============================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# Development/Testing Configuration
# =================================
DEBUG=true
MOCK_DATA=true
